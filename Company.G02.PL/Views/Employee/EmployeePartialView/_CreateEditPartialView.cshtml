

@model Employee
@{
    var Departments = new SelectList(ViewData["departments"] as IEnumerable<Department>,"Id" , "Name");
}

<div class="form-group my-3">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="Phone"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group my-3">
    <label asp-for="IsActive"></label>
    <input asp-for="IsActive" class="form-check" />

</div>
<div class="form-group my-3">
    <label asp-for="IsDeleted"></label>
    <input asp-for="IsDeleted" class="form-check" />

</div>
<div class="form-group my-3">
    <label asp-for="DateOfBirth"></label>
    <input asp-for="DateOfBirth" class="form-control" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

</div>
<div class="my-3">
    <label asp-for="CreateAt" class="col-form-label"></label>
    <input asp-for="CreateAt" class="form-control" />
    <span asp-validation-for="CreateAt" class="text-danger"></span>

</div>
<div class="my-3">
    <label asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="Departments" class="form-control">
       
       <option value="@null">--Select Department--</option>
   </select>
</div>
